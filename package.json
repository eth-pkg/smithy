{
  "name": "smithy-cli",
  "version": "1.0.0",
  "description": "A CLI tool for generating Ethereum client configurations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --transpile-only src/cli.ts",
    "test": "mocha -r tsconfig-paths/register -r ts-node/register -r ./test/setup.ts test/**/*.test.ts test/**/**/*.test.ts",
    "test:watch": "mocha -r tsconfig-paths/register -r ts-node/register -r ./test/setup.ts --watch test/**/*.test.ts test/**/**/*.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "npm run build"
  },
  "bin": {
    "smithy": "./dist/cli.js"
  },
  "keywords": [
    "cli",
    "file-processing",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "chai": "^4.3.7",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "inquirer": "^9.1.5",
    "js-yaml": "^4.1.0",
    "module-alias": "^2.2.3"
  },
  "_moduleAliases": {
    "@": "src",
    "@test": "test"
  },
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
